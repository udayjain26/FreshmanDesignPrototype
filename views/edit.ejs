<% include ./partials/header %>
<div class = "ui main text container segment">
    <div class = "ui huge header">Edit <%=event.title%></div>
    <form class = "ui form" action ="/events/<%=event._id%>?_method=PUT" method = "POST">
        <div class = "field">
            <label>Title</label>
            <input type = "text" name = "event[title]" value = "<%=event.title%>">
        </div>
        <div class = "field">
            <label>Location</label>
        <input type = "text" name = "event[location]" value = "<%=event.location%>">
        </div>
        <div class = "field">
            <label>Time</label>
        <input type = "text" name = "event[time]" value = "<%=event.time%>">
        </div>
        <div class = "field">
            <label>Image</label>
        <input type = "text" name = "event[image]" value = "<%=event.image%>">
        </div>
        <div class = "field">
            <label>Description</label>
        <textarea name = "event[description]"><%=event.description%></textarea>
        </div>
        <input class = "ui blue big basic button" type = "submit">
    </form>
</div>
<% include ./partials/footer %>